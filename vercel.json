{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "MONGO_URI": "MONGO_URI",
    "JWT_SECRET": "JWT_SECRET",
    "MONGO_DB_NAME": "MONGO_DB_NAME",
    "ADMIN_USERNAME": "ADMIN_USERNAME",
    "ADMIN_PASSWORD": "ADMIN_PASSWORD",
    "VITE_API_GOOGLE": "VITE_API_GOOGLE"
  }
}
